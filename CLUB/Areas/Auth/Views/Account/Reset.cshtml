@model ForgotPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <link rel="icon" href="~/images/Key-Club-International-Logo.jpg" type="image/x-icon" />

    <meta name="viewport" content="width=device-width" />
    <title>Register</title>

    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-success">

    <div class="container">
        <div class="card col-lg-9 col-md-9 col-sm-12 o-hidden border-0 shadow-lg my-5 m-auto">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row p-5">
                            <div class="text-center col-md-12">
                                <h5 style="color:black;margin-bottom: 12px; font-weight: 700;">Reset Password</h5>
                            </div>
                            <div class="card-body col-md-12">
                                
                                <hr />

                                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" data-parsley-validate="parsley" autocomplete="on">

                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <input type="hidden" class="form-control" id="Mobile" value="@Model.employeeInfo?.mobileNumberOffice" name="Mobile">
                                    <input type="hidden" class="form-control" id="Email" value="@Model.employeeInfo?.emailAddress" name="Email" data-parsley-required="true" data-parsley-type="email">
                                    <div class="form-group row">
                                        <label for="Name" class="col-md-2 col-sm-2 col-form-label">ID<span style="color:red;">*</span></label>
                                        <div class="col-md-10 col-sm-10">
                                            <input type="text" readonly class="form-control" value="@Model.employeeInfo?.employeeCode" id="Name" name="Name" data-parsley-required="true">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="Email" class="col-md-2 col-sm-2 col-form-label">Email<span style="color:red;">*</span></label>
                                        <div class="col-md-10 col-sm-10">
                                            <p class="form-control" id="Email1" style="background:#d1d3e2">@Model.employeeInfo?.emailAddress</p>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="Email" class="col-md-2 col-sm-2 col-form-label">Mobile<span style="color:red;">*</span></label>
                                        <div class="col-md-10 col-sm-10">
                                            <p class="form-control" id="Mobile1" style="background:#d1d3e2">@Model.employeeInfo?.mobileNumberOffice</p>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="Password" class="col-md-2 col-sm-2 col-form-label">Password<span style="color:red;">*</span></label>
                                        <div class="col-md-10 col-sm-10">
                                            <input type="password" class="form-control" id="Password" name="Password" data-parsley-required="true" data-parsley-maxlength="20" data-parsley-equalto="#ConfirmPassword">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="ConfirmPassword" class="col-md-2 col-sm-2 col-form-label">Confirm Password<span style="color:red;">*</span></label>
                                        <div class="col-md-10 col-sm-10">
                                            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" data-parsley-required="true" data-parsley-maxlength="20" data-parsley-equalto="#Password">
                                        </div>
                                    </div>
                                    <input type="hidden" name="userId" value="@Model.employeeInfo?.Id" id="userId" />

                                    <button type="submit" class="btn btn-info btn-user btn-block">
                                        Reset Password
                                    </button>
                                </form>
                                <br />
                                <a href="/Auth/Account/Login">Log In</a>
                            </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/LayoutAssets/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/parsly.js"></script>
    <script src="~/js/common.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#bookCategoryTable").DataTable();
        });

        function getEmployee() {
            var id = $("#empId").val();
            if (id == "") {
                alert("Please Enter Member Id !!");
            } else {
                Common.Ajax('GET', '/global/api/ExistEmployeeByCode/' + id, [], 'json', ajaxEmployee);
            }
        }

        function ajaxEmployee(response) {
            if (response) {

                console.log(response);
                $("#designation").val(response.designation);
                $("#employeeId").val(response.id);
                $("#employeeName").val(response.nameEnglish);
                $("#Name").val(response.employeeCode);
                $("#Email").val(response.emailAddress);
                $("#Email1").text(response.emailAddress);
                $("#Mobile").val(response.mobileNumberOffice);
                $("#Mobile1").text(response.mobileNumberOffice);
                $("#userId").val(response.id);
            } else {
                alert("Member has No login access !! Please Registration First!!!");
                $("#designation").val('');
                $("#employeeId").val('');
                $("#employeeName").val('');
                $("#Name").val('');
                $("#Email").val('');
                $("#userId").val('');
            }
        }
    </script>
</body>
</html>
