@model UserListViewModel
@{
    ViewData["Title"] = "UserProxyByAdmin";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
	<div class="card-header">
		Proxy User Login
	</div>
	<div class="card-body">
        <form asp-action="SwitchedUser" asp-controller="Account" asp-area="Auth" method="post">
            <div class="form-group row">
                <label class="col-md-2">Username</label>
                <div class="col-md-6">
                    <input type="text" name="userId" class="form-control" value="" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2">Security Code</label>
                <div class="col-md-6">
                    <input type="text" name="securityCode" class="form-control" value="U.OPUS" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2"></div>
                <input type="submit" class="btn btn-success ml-3" style="cursor: pointer;" value="Switch User" />
            </div>
        </form>
	</div>
</div>