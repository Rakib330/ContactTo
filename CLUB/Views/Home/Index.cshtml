@section Scripts{

    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        var Message = "@Html.Raw(Model.Message)";
        $(document).ready(function () {
            
        });

        function ShowDetails() {
            $("#dashboardDataViewModal").modal('show');
        }

        function getEmployee() {
            var id = $("#employeeId").val();
            if (id == "") {
                alert("Please Enter Employee Id !!");
            } else {
                Common.Ajax('GET', '/global/api/employeeByCode/' + id, [], 'json', ajaxEmployee);
            }
        }

        function ajaxEmployee(response) {
            console.log(response);
            if (response) {
                console.log(response.nameEnglish);
                $("#employeeName").val(response.nameEnglish);
                $("#id").val(response.id);
            } else {
                alert("Please Enter Correct Employee Id");
                $("#employeeName").val('');
                $("#id").val('');
                $("#employeeId").val('');
            }
        }

        function GotoView(section) {
            
            if (section == "email") {
                location.replace("/Bulk/ReceiverSMSEmail/Email");
                }else if (section == "sms") {
                    location.replace("/Bulk/ReceiverSMSEmail/SMS");
                }else if (section == "settings") {
                    location.replace("/Home/GridMenuPage?moduleId=1&perentId=1");
                }else if (section == "group") {
                    location.replace("/Bulk/ReceiverSMSEmail/Group");
                }else if (section == "receiver") {
                    location.replace("/Bulk/ReceiverSMSEmail/Receiver");
                }else if (section == "upload") {
                    location.replace("/Bulk/ReceiverSMSEmail/ReceiverUpload");
                }else if (section == "receiverlist") {
                    location.replace("/Bulk/ReceiverSMSEmail/ReceiverList");
                }else if (section == "whatsapp") {
                    location.replace("/Bulk/ReceiverSMSEmail/Whatsapp");
                }
            //}
        }

    </script>
}